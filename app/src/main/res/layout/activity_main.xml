<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="140dp"
        android:background="@drawable/z_maintop"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:background="@drawable/z_mainbottom"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/app_title_name"
            android:layout_margin="@dimen/letters_margin"
            android:textStyle="bold"
            android:gravity="center"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            />

        <TextView
            android:id="@+id/textViewPoints"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/letters_margin"
            android:text="Points 356"
            android:gravity="center"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            />

        <TextView
            android:id="@+id/textViewQuestions"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/letters_margin"
            android:text="Questions 5 / 77"
            android:gravity="center"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            />

        <TextView
            android:id="@+id/textViewPlay"
            android:layout_width="275dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/letters_margin"
            android:text=""
            android:background="@drawable/z_play_button"
            />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOtherApps"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="@dimen/letters_margin"
            android:text="Other Quiz Games"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/color3"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            />

    </LinearLayout>


    </LinearLayout>



</RelativeLayout>